
<h2 class="h-flash">Uncompleted tasks: <%= current_user.todos.count %></h2>
<ul> 
    <li class="li-navlink"><%= link_to ">> Create new To-Do <<", new_todo_path %></li>
</ul> 
<ul id="todo-list">
      <% @todos.each do |todo| %>
    <li class="li-tasks">
    <%= link_to '', edit_todo_path(todo), class: "fas fa-pencil-alt fa-lg"%>
    <%= link_to '', todo_path(todo), method: :delete, class: "fas fa-check-square fa-lg" %> 
     <%= todo.task %>
    </li>
    <hr>
      <% end %>
</ul>

<i class="fas fa-home fa-lg"><%= link_to 'Home', root_path %></i>


